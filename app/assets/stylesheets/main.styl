@import url(http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,900italic,900,700italic&subset=latin,cyrillic)

$font-family-base = 'Roboto', sans-serif

@import nib
@import bootstrap







$color_secondary = #fff
$anim-time = .5s

.noscroll
  overflow hidden

.view-single .grid::after
  opacity 1

.grid
  position relative

  &__item
    &--loading
      .loader::before
        transition transform 1s
        transition-timing-function cubic-bezier(.165, .84, .44, 1)
        transform scale3d(1, 1, 1)

    &--animate
      .loader
        transition-delay .1s
        opacity 0
        transform translate3d(0, -30px, 0)

.loader
  height 1px
  width 40%
  margin 1em auto
  position relative
  background rgba(0,0,0,.1)
  transition-delay .1s

  &::before
    content ''
    position absolute
    width 100%
    height 3px
    background #a4e7ad
    left 0
    top -1px
    transform scale3d(0,1,1)
    transform-origin 0% 50%

.scroll-wrap
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  z-index 1
  overflow-y scroll
  -webkit-overflow-scrolling touch

.placeholder
  pointer-events none
  position absolute
  width calc(100% + 5px)
  height calc(100vh + 5px)
  z-index 100
  top 0
  left 0
  background $color_secondary
  transform-origin 0 0

  &--trans
    &-in
      transition transform $anim-time
      transition-timing-function cubic-bezier(.165,.84,.44,1)

    &-out
      transition transform $anim-time

.content
  position absolute
  top 0
  left 0
  width 100%
  pointer-events none
  height 0
  visibility hidden
  z-index 400
  overflow hidden

  &.content--show
    height 100vh
    pointer-events auto
    visibility visible

  &__item
    position absolute
    top 0
    width 100%
    overflow hidden
    height 0
    opacity 0
    pointer-events none

    &--show
      height auto
      min-height 100vh
      opacity 1
      pointer-events auto
      transition opacity .6s

  .close-button
    position absolute
    z-index 100
    







#theGrid
  margin 1000px 0

body
  font-weight 300
  font-smoothing antialiased
  text-rendering optimizeLegibility


.item
  
  &-container
    // Empty

  &-link
    display block
    position relative
    margin 5% 
    
    &:hover
    &:focus
      .item
        &-text
          opacity 1  
        
          &-noimg
            .item-table
              box-shadow inset 0px 0px 0px 10px #e2cf51

  &-box
    padding 15% 
    
    &-img
      width 100%
    
  &-text
    position absolute
    top 0
    left 0  
    bottom 0
    
    opacity 0
    transition all .2s ease-in
  
    &-inner
      display table-cell
      vertical-align middle
      
    &-noimg
      position relative
      opacity 1  
      
      .item-table
        box-shadow inset 0px 0px 0px 6px #e2cf51
        
    &-desc
      color #64686a 
      
    &-title 
      font-weight 300   
    
  &-table
    display table
    width 100%
    height 100%
    text-align center
    color #262526
    background rgba(255, 255, 255, .5)
    padding 10%
    transition all .2s ease-in
      